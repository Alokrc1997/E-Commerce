<%- include('../partials/header') %> 
<%- include("../partials/navbar") %> 


    <div class="container " style="margin-top: 5rem;">

        <%- include('../partials/flash')  %> 

        <div class="row">
            <% for(let item of items){%>
            <div class="col-lg-3 col-md-6 my-3 d-flex justify-content-center ">
                
                <div class="card text-center " style="width: 17rem;">
                    <img src="<%=item.image %>" class="card-img-top img-fluid" alt="...">
                    <div class="card-body m-3">
                      <h5 class="card-title"><%= item.name%></h5>
                      <p class="card-text"><%= item.desc.substring(0,70) %> </p>
                      <a href="/products/<%= item._id %> " class="btn btn-outline-primary">View Info</a>
                    </div>
                  </div>
                
             </div>
             <% } %> 
        </div>
    
    </div>
    
<%- include("../partials/footer") %> 