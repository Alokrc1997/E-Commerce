<%- include("../partials/header") %> 
<%- include("../partials/navbar") %> 


<div class="container " style="max-width: 70%;margin-top: 6rem;">

    <form action="/products/<%= item._id %>?_method=PATCH " class="needs-validation" novalidate method="POST">

    <div class="row mb-3">
        <label for="colFormLabelLg" class="col-sm-2 col-form-label col-form-label-lg">Product Title</label>
        <div class="col-sm-10">
          <input type="text" class="form-control form-control-lg" id="" placeholder="Name" name=product[name] required value="<%= item.name %> ">
        </div>
    </div>

        <div class="row mb-3">
            <label for="colFormLabel" class="col-sm-2 col-form-label">Product Price in $</label>
            <div class="col-sm-10">
              <input type="number" class="form-control" id="colFormLabel" placeholder="Price" name=product[price] required value=<%= item.price %>>
            </div>
          </div>

    
      <div class="row mb-3">
        <label for="colFormLabel" class="col-sm-2 col-form-label">Paste Image Link</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" id="colFormLabel" placeholder="Link" name=product[image] required value="<%= item.image %> ">
        </div>
      </div>

      <div class="row mb-3">
        <label for="colFormLabelSm" class="col-sm-2 col-form-label col-form-label-sm">Product Description</label>
        <div class="col-sm-10">
            <textarea class="form-control form-control-sm" placeholder="Description" required   cols="70" rows="5" name=product[desc]><%= item.desc %> </textarea>
        </div>
      </div>
      

    <div class="text-center">
      <button type="submit" class="btn btn-success">Save</button>
    </div>
      
    </form>
   </div>



<%- include("../partials/footer") %> 